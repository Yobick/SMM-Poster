<div class="container-fluid d-flex"  style="margin-left: 8cm; margin-right: auto">
  <p id="notice"><%= notice %></p>

    <table class="table d-flex text-center table-hover table-dark flex-column">
      <thead>
        <tr class="row">
          <th class="col-1">№ Задачи</th>
          <th class="col-2">Дата и время</th>
          <th class="col-2">Соц. сеть</th>
          <th class="col-2">Содержание</th>
          <th class="col-3"><%= link_to 'Добавить задачу', new_task_path, class: "btn btn-primary" %></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr class="row">
            <td class="col-1"><%= task.id %></td>
            <td class="col-2"><%= task.date %></td>
            <td class="col-2"><%= task.social_name %></td>
            <td style="overflow: auto" class="col-2"><%= task.posts %></td>
            <td class="col-3">
              <%= link_to 'Показать', task, class: "btn btn-dark" %>
              <%= link_to 'Изменить', edit_task_path(task), class: "btn btn-dark"  %>
              <%= link_to 'Удалить', task, method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-danger"  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
</div>