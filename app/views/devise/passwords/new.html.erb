<div class="session-box">
  <div class="container d-flex align-items-center text-center justify-content-center h-100">
    <div class="side-text">
      <div style="height: 60px">
        <h2>Забыли пароль?</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div style="height: 60px">
          <div class="field">
            <%= f.email_field :email, autofocus: true, class:"form-control", placeholder: "Введите почту"  %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Отправить инструкцию на почту", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
