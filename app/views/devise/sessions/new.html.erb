<div class="session-box">
  <div class="container d-flex align-items-center text-center justify-content-center h-100">
    <div class="side-text">
      <div style="height: 60px">
        <h3>Авторизация</h3>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div style="height: 60px">
           <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Введите почту" %>
          </div>
        </div>

        <div style="height: 50px">
          <div class="field">
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder: "Введите пароль" %>
          </div>
        </div>

        <%= recaptcha_tags %>

        <div class="actions">
          <%= f.submit "Войти", class: "btn btn-primary" %>
        </div>
      <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>